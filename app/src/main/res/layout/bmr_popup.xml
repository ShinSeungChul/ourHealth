<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:text="성별을 선택하세요."
            android:fontFamily="@font/bmx"
            android:textSize="20sp"
            android:textColor="#033809"
            android:gravity="center"
            android:background="#b4ffb8"
            android:layout_width="match_parent"
            android:layout_height="53dp" />
    </LinearLayout>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radiosex"
        android:visibility="visible"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
    <RadioButton android:id="@+id/radio_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmx"
        android:text="남"
        android:onClick="onRadioButtonClicked"/>


        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <RadioButton android:id="@+id/radio_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여"
        android:fontFamily="@font/bmx"
        android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radioactive"
        android:visibility="gone"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmx"
            android:text="비활동적"
            android:onClick="onRadioButtonClicked"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content" />


        <RadioButton android:id="@+id/radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보통"
            android:fontFamily="@font/bmx"
            android:onClick="onRadioButtonClicked"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content" />


        <RadioButton android:id="@+id/radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="활동적"
            android:fontFamily="@font/bmx"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/editor"
        android:padding="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/attribute"
            android:fontFamily="@font/bmx"
            android:text="키 : "
            android:inputType="textMultiLine"
            android:textSize="20sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:fontFamily="@font/bmx"
            android:id="@+id/result"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="100dp"
            android:textSize="17sp"
            android:layout_height="wrap_content" />
        <EditText
            android:visibility="visible"
            android:inputType="number"
            android:id="@+id/edit"

            android:layout_width="100dp"
            android:singleLine="true"
            android:dividerHeight="0px"
            android:divider="#ffffff"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/unit"
            android:fontFamily="@font/bmx"
            android:textSize="17sp"
            android:textColor="#000000"
            android:text = "cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout

        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/next"
            android:text="다음"
            android:fontFamily="@font/bmx"
            android:textSize="15sp"
            android:textColor="#262626"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="53dp"

            />
    </LinearLayout>
</LinearLayout>